<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="ResourceName">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        app:cardPreventCornerOverlap="false"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/elevation_bottom"
        android:layout_marginTop="@dimen/elevation_top"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/elevation_height">

        <ImageView
            android:id="@+id/iv_platform_item_doubue_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        app:cardPreventCornerOverlap="false"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/elevation_bottom"
        android:layout_marginTop="@dimen/elevation_top"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/elevation_height">

        <ImageView
            android:id="@+id/iv_platform_item_doubue_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />
    </android.support.v7.widget.CardView>
</LinearLayout>
