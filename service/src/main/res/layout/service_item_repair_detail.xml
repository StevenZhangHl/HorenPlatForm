<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View style="@style/service_diver_10" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/margin_15">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/service_color_F15"
            tools:text="待平台确认" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="@dimen/margin_5"
            android:background="?attr/actionBarItemBackground"
            android:padding="@dimen/margin_10"
            android:src="@drawable/service_ic_edit" />
    </FrameLayout>

    <View
        style="@style/divider"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginTop="0dp" />
    <!--订单信息-->
    <include layout="@layout/service_include_repair_info" />

    <TextView
        android:id="@+id/tv_remake"
        style="@style/service_paddingLeftRight_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="拜访记录拜访记录拜访记录拜访记录拜访记录拜访记录拜访记录拜访记录拜访记录拜访记录拜访记录"
        android:textColor="@color/color_333"
        android:textSize="@dimen/textSize_15"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_photo"
        style="@style/service_paddingLeftRight_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_20"
        android:overScrollMode="never" />
</LinearLayout>