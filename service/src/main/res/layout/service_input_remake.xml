<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/service_paddingLeftRight_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_5"
    android:background="@color/white"
    android:visibility="gone"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_remake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="@string/service_input_remake"
        android:inputType="textMultiLine"
        android:maxLength="30"
        android:paddingBottom="@dimen/margin_5"
        android:paddingTop="@dimen/margin_5"
        android:textColor="@color/color_333"
        android:textColorHint="@color/DCDCDC"
        android:textSize="@dimen/service_tv_13" />

    <TextView
        android:id="@+id/tv_remake_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:text="0/30"
        android:textColor="@color/color_666"
        android:visibility="gone" />
</LinearLayout>
