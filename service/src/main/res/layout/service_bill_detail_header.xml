<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/service_paddingLeftRight_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_money_title"
        style="@style/service_tv13_color_333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:text="未收总金额" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:text="3549.12"
        android:textColor="@color/service_color_6FB"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/service_total_amount"
            android:textColor="@color/color_666"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥200000"
            android:textColor="@color/color_333"
            android:textSize="@dimen/textSize_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_paid_total_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/service_paid_total_amount"
            android:textColor="@color/color_666"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/tv_paid_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥100000"
            android:textColor="@color/color_333"
            android:textSize="@dimen/textSize_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_complete_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单完成时间"
            android:textColor="@color/color_666"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/tv_complete_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-06-30"
            android:textColor="@color/color_333"
            android:textSize="@dimen/textSize_16" />
    </LinearLayout>

    <View
        style="@style/service_diver_f1"
        android:layout_marginTop="@dimen/margin_15" />
</LinearLayout>