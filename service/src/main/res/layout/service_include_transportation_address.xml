<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/service_shape_f1_bg"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <LinearLayout
        style="@style/service_paddingLeftRight_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="起点"
            android:textColor="@color/color_666"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/tv_start_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="中国广东省佛山市禅城区大高路290号撒地方撒地方撒地方是的发送的是"
            android:textColor="@color/color_333"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <View style="@style/service_diver_f1_margin_15" />

    <LinearLayout
        style="@style/service_paddingLeftRight_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="终点"
            android:textColor="@color/color_666"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/tv_end_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="中国广东省佛山市禅城区大高路290号撒地方撒地方撒地方是的发送的是"
            android:textColor="@color/color_333"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

</LinearLayout>