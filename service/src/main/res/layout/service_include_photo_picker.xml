<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:overScrollMode="never"
        android:id="@+id/rv_photo_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/service_paddingLeftRight_15"
        tools:listitem="@layout/service_item_photo_picker" />

    <com.allen.library.SuperButton
        android:id="@+id/sbt_confirm_upload"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/service_confirm_upload"
        android:textColor="@color/white"
        app:sCornersRadius="15dp"
        app:sGradientEndColor="#6FBA2C"
        app:sGradientOrientation="LEFT_RIGHT"
        app:sGradientStartColor="#87CD25"
        app:sSolidColor="@color/color_main" />

</LinearLayout>