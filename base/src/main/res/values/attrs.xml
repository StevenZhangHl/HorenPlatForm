<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HRToolbar">
        <attr name="title" format="string" />
        <attr name="left_title" format="string" />
        <attr name="right_title" format="string" />
        <attr name="is_white" format="boolean" />
        <attr name="title_elevation" format="integer" />
        <attr name="bg_color" format="reference" />
        <attr name="right_icon" format="reference" />
        <attr name="left_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="HRTitle">
        <attr name="mTitle" format="string" />
        <attr name="mRightTitle" format="string" />
        <attr name="mLeftTitle" format="string" />
        <attr name="isWhite" format="boolean" />
        <attr name="isDiver" format="boolean" />
        <attr name="isClose" format="boolean" />
    </declare-styleable>

    <!--验证码的属性-->
    <declare-styleable name="VerCodeEditText">
        <attr name="figures" format="integer" />
        <attr name="verCodeMargin" format="dimension" />
        <attr name="bottomLineSelectedColor" format="reference" />
        <attr name="bottomLineNormalColor" format="reference" />
        <attr name="bottomLineHeight" format="dimension" />
        <attr name="selectedBackgroundColor" format="reference" />
    </declare-styleable>
    <!--多种颜色变换按钮-->
    <declare-styleable name="RippleButton">
        <attr name="gray_text" format="string" />
        <attr name="red_text" format="string" />
        <attr name="green_text" format="string" />
        <attr name="rbt_radius" format="dimension" />
        <attr name="loading_text" format="string" />
    </declare-styleable>
    <!--通用表格类型控件，用于内含多个TextView-->
    <declare-styleable name="HRTabView">
        <attr name="tab_strings" format="string" />
        <attr name="tab_weight" format="string" />
        <attr name="tab_text_color" format="reference" />
        <attr name="tab_text_size" format="dimension" />
    </declare-styleable>

    <!--拼接文字TextView-->
    <declare-styleable name="HRTextView">
        <attr name="left_text" format="string" />
        <attr name="is_add_colon" format="boolean" />
    </declare-styleable>
    <!--切换TabLayout-->
    <declare-styleable name="HRTabLayout">
        <attr name="sw_left" format="string" />
        <attr name="sw_right" format="string" />
        <attr name="sw_is_white" format="boolean" />
        <attr name="sw_elevation" format="integer" />
        <attr name="sw_max_tv_size" format="dimension" />
        <attr name="sw_min_tv_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomBottomTab">
        <attr name="mTabLeftText" format="string" />
        <attr name="mTabRightText" format="string" />
    </declare-styleable>

    <declare-styleable name="ServiceDashView">
        <attr name="service_dashWidth" format="dimension" />
        <attr name="service_lineWidth" format="dimension" />
        <attr name="service_lineHeight" format="dimension" />
        <attr name="service_lineColor" format="color" />
        <attr name="service_dashOrientation" format="integer" />
    </declare-styleable>

</resources>