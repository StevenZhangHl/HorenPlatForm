<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5"
    android:orientation="vertical">

    <com.horen.base.widget.HRTitle
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mLeftTitle="取消"
        app:mRightTitle="保存"
        app:mTitle="编辑账号" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            style="@style/service_paddingLeftRight_15"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/service_tv15_color_333"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="姓名" />

            <com.horen.base.widget.PWEditText
                android:id="@+id/et_name"
                style="@style/service_tv13_color_333"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:hint="请输入姓名"
                android:text="" />
        </LinearLayout>

        <View style="@style/service_diver_f1_margin_15" />

        <LinearLayout
            style="@style/service_paddingLeftRight_15"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/service_tv15_color_333"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="联系电话" />

            <com.horen.base.widget.PWEditText
                android:id="@+id/et_phone"
                style="@style/service_tv13_color_333"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:hint="请输入联系电话"
                android:text="" />
        </LinearLayout>

        <View style="@style/service_diver_f1_margin_15" />

        <LinearLayout
            style="@style/service_paddingLeftRight_15"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/service_tv15_color_333"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="登录账号" />

            <com.horen.base.widget.PWEditText
                android:id="@+id/et_account"
                style="@style/service_tv13_color_333"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:hint="请输入登陆账号"
                android:text="" />
        </LinearLayout>

        <View style="@style/service_diver_f1_margin_15" />

        <LinearLayout
            style="@style/service_paddingLeftRight_15"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/service_tv15_color_333"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="密码" />

            <com.horen.base.widget.PWEditText
                android:id="@+id/et_pwd"
                style="@style/service_tv13_color_333"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:hint="请输入密码"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>