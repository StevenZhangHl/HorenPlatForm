<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="68dp"
    android:orientation="horizontal">

    <com.allen.library.SuperButton
        android:id="@+id/sbt_name"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_15"
        android:text="陈"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_15"
        app:sCornersRadius="100dp"
        app:sGradientEndColor="@color/base_text_color_light"
        app:sGradientOrientation="LEFT_RIGHT"
        app:sGradientStartColor="@color/color_main" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                style="@style/service_tv15_color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="田磊" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/service_tv12_color_999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="183 1751 9956" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:text="嘉兴仓储中心 中国上海市闵行区东川路100号中国上海市闵行区东川路100号" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="10dp"
        android:background="@color/DCDCDC" />

    <TextView
        android:id="@+id/tv_edit"
        android:padding="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_5"
        android:text="编辑"
        android:textColor="@color/color_999"
        android:textSize="@dimen/textSize_13" />
</LinearLayout>