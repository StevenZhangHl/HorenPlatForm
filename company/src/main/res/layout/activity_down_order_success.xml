<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.horen.base.widget.HRTitle
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        stv:isDiver="false" />


    <ImageView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_submit_order_success" />

    <TextView
        android:id="@+id/order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:textColor="@color/color_333"
        android:textSize="@dimen/textSize_18"
        tools:text="还箱订单提交成功" />

    <TextView
        android:id="@+id/tv_return_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:textColor="@color/color_333"
        android:textSize="@dimen/textSize_12"
        tools:text="注：订单处理完成即可获得200还箱点" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        style="@style/service_paddingLeftRight_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/tv_tip"
        style="@style/service_paddingLeftRight_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="end"
        android:textColor="@color/color_F15"
        android:textSize="@dimen/textSize_13"
        tools:text="还箱有2个上游企业，故拆分2个还箱订单" />

    <com.allen.library.SuperButton
        android:id="@+id/stb_system_warehouse"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:text="系统匹配：最近百网千驿"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        stv:sGradientEndColor="@color/base_text_color_light"
        stv:sGradientOrientation="LEFT_RIGHT"
        stv:sGradientStartColor="@color/color_main" />

    <LinearLayout
        style="@style/service_paddingLeftRight_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/service_tv15_color_333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="百网千驿" />

        <TextView
            android:id="@+id/tv_order_name"
            style="@style/service_tv15_color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="嘉兴大仓" />
    </LinearLayout>

    <LinearLayout
        style="@style/service_marginLeftRight_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/service_tv15_color_333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="地址" />

        <TextView
            android:id="@+id/tv_order_address"
            style="@style/service_tv15_color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            tools:text="福建省厦门市莲花五村龙昌里344号" />
    </LinearLayout>

    <LinearLayout
        style="@style/service_paddingLeftRight_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/service_tv15_color_333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="联系人 " />

        <TextView
            android:id="@+id/tv_order_contract"
            style="@style/service_tv15_color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="臧学友" />
    </LinearLayout>

    <LinearLayout
        style="@style/service_paddingLeftRight_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/service_tv15_color_333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="联系电话" />

        <TextView
            android:id="@+id/tv_org_phone"
            style="@style/service_tv15_color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_text_color_light"
            tools:text="15888888888" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center">

        <com.allen.library.SuperButton
            android:id="@+id/bt_order_look"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_20"
            android:text="查看订单"
            android:textColor="@color/base_text_color_light"
            android:textSize="@dimen/textSize_14"
            stv:sCornersRadius="6dp"
            stv:sSelectorNormalColor="@color/white"
            stv:sSelectorPressedColor="@color/white"
            stv:sStrokeColor="@color/color_main_color"
            stv:sStrokeWidth="1dp"
            stv:sUseSelector="true" />

        <com.allen.library.SuperButton
            android:id="@+id/bt_order_continue"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_20"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_14"
            stv:sCornersRadius="6dp"
            stv:sGradientEndColor="#6FBA2C"
            stv:sGradientOrientation="LEFT_RIGHT"
            stv:sGradientStartColor="#87CD25"
            tools:text="继续租箱" />

    </LinearLayout>
</LinearLayout>