<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/menu_layout"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:ios="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/shape_f1_bg_14"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张静"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/textSize_13" />


                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="启用"
                    android:textColor="@color/base_text_color_light"
                    android:textSize="@dimen/textSize_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    style="@style/service_tv13_color_666"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="登录账号:" />

                <TextView
                    android:id="@+id/tv_account"
                    style="@style/service_tv13_color_666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hljhbvy81625" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    style="@style/service_tv13_color_666"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="联系电话:" />

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/service_tv13_color_666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="158 0980 9921" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    style="@style/service_tv13_color_666"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="账号密码:" />

                <TextView
                    android:id="@+id/tv_pwd"
                    style="@style/service_tv13_color_666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="********" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/service_tv12_color_999"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="新增时间:" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/service_tv12_color_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-10-15 12:30:20" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_account_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_account_edit" />

        <ImageView
            android:id="@+id/iv_account_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/icon_account_enable" />
    </LinearLayout>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
