<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.horen.base.widget.HRTitle
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        app:isDiver="false"
        app:mLeftTitle="一键盘点"
        app:mRightTitle="资产列表"
        app:mTitle="天眼" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        app:tl_iconVisible="false"
        app:tl_indicator_color="@color/base_text_color_light"
        app:tl_indicator_height="1.5dp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/color_333"
        app:tl_textUnselectColor="@color/color_666"
        app:tl_textsize="@dimen/textSize_15" />

    <View style="@style/service_diver_f1" />

    <com.horen.base.widget.HRViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>