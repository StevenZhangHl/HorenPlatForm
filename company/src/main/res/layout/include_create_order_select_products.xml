<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/service_diver_f1_margin_15" />

    <LinearLayout
        android:id="@+id/ll_select_product"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <com.allen.library.SuperButton
            android:id="@+id/sbt_select_product"
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:text="选择物品"
            android:textColor="@color/color_333"
            android:textSize="@dimen/textSize_14"
            app:sCornersRadius="4dp"
            app:sSolidColor="@color/white"
            app:sStrokeColor="@color/base_text_color_light"
            app:sStrokeWidth="1dp" />

        <TextView
            style="@style/service_tv12_color_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="请选择您所需要的物品" />
    </LinearLayout>

</LinearLayout>