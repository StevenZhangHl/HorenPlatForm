<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="明细"
            android:textColor="@color/color_333"
            android:textSize="@dimen/textSize_18" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="@dimen/margin_5"
            android:background="?actionBarItemBackground"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_back_close" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            style="@style/service_paddingLeftRight_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_10">

            <TextView
                style="@style/service_tv12_color_666"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="租箱费" />

            <TextView
                android:id="@+id/tv_rent_money"
                style="@style/service_tv12_color_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 250.00 " />

        </LinearLayout>

        <LinearLayout
            style="@style/service_paddingLeftRight_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                style="@style/service_tv12_color_666"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="耗材费" />

            <TextView
                android:id="@+id/tv_supplies_money"
                style="@style/service_tv12_color_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 100.00 " />

        </LinearLayout>

        <LinearLayout
            style="@style/service_paddingLeftRight_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                style="@style/service_tv12_color_666"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="运费" />

            <TextView
                android:id="@+id/tv_freight_money"
                style="@style/service_tv12_color_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 50.00 " />

        </LinearLayout>

        <LinearLayout
            style="@style/service_paddingLeftRight_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                style="@style/service_tv12_color_666"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清洗费" />

            <TextView
                android:id="@+id/tv_cleaning_money"
                style="@style/service_tv12_color_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 10.00 " />

        </LinearLayout>

        <LinearLayout
            style="@style/service_paddingLeftRight_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/service_tv13_color_333"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="总费用" />

            <TextView
                android:id="@+id/tv_all_money"
                style="@style/service_tv13_color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 0" />

        </LinearLayout>

        <LinearLayout
            style="@style/service_paddingLeftRight_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                style="@style/service_tv12_color_666"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="优惠" />

            <TextView
                android:id="@+id/tv_preferential_money"
                style="@style/service_tv12_color_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- ¥ 0" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        style="@style/service_paddingLeftRight_15"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_5">

        <TextView
            android:id="@+id/tv_actual_money_name"
            style="@style/service_tv14_color_333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="实付金额" />

        <TextView
            android:id="@+id/tv_actual_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 250.00 "
            android:textColor="@color/base_text_color_light"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View style="@style/service_diver_f1" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_bottom_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_preferential"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠：¥ 0"
                android:textColor="@color/base_text_color_light"
                android:textSize="@dimen/textSize_12" />
            <!--已获取到金额UI-->
            <LinearLayout
                android:id="@+id/tv_amount_details_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible"
                tools:visibility="visible">

                <TextView
                    style="@style/service_tv13_color_666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计金额:" />

                <TextView
                    android:id="@+id/tv_order_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="¥89868.00"
                    android:textColor="@color/base_text_color_light"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    style="@style/service_tv13_color_333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:drawableRight="@drawable/icon_down_back"
                    android:drawablePadding="@dimen/margin_5"
                    android:text="明细" />

            </LinearLayout>
        </LinearLayout>

        <com.allen.library.SuperButton
            android:id="@+id/tv_submit_click"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_30"
            android:background="@color/color_main_color"
            android:drawablePadding="@dimen/margin_5"
            android:enabled="true"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin_20"
            android:paddingTop="@dimen/margin_10"
            android:paddingRight="20.5dp"
            android:paddingBottom="@dimen/margin_10"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_14"
            app:sSelectorDisableColor="@color/DCDCDC"
            app:sSelectorNormalColor="@color/color_main_color"
            app:sSelectorPressedColor="@color/color_main_color"
            app:sUseSelector="true" />
    </LinearLayout>
</LinearLayout>