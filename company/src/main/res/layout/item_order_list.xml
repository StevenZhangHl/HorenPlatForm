<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/service_marginLeftRight_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_f1_bg_14"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/icon_rent" />

        <TextView
            style="@style/service_tv13_color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="订单号:" />

        <TextView
            android:id="@+id/tv_order_number"
            style="@style/service_tv13_color_333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="CN-20171012_01" />


        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/margin_5"
            android:gravity="right"
            android:text="待处理"
            android:textColor="@color/base_text_color_light"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/service_tv12_color_878"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已签收/总箱数" />

                <TextView
                    android:id="@+id/tv_all_box"
                    style="@style/service_tv12_color_333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="10/100" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    style="@style/service_tv12_color_878"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已签收/总耗材数" />

                <TextView
                    android:id="@+id/tv_all_supplies"
                    style="@style/service_tv12_color_333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="10/100" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_order_time"
                style="@style/service_tv12_color_878"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="下单时间: CN-20171012_01"
                android:textColor="@color/color_878"
                android:textSize="@dimen/textSize_12" />
        </LinearLayout>
    </LinearLayout>

    <com.allen.library.SuperButton
        android:id="@+id/sbt_evaluation"
        style="@style/service_tv12_color_666"
        android:layout_width="55dp"
        android:layout_height="22dp"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="评价"
        android:visibility="gone"
        app:sCornersRadius="11dp"
        app:sSolidColor="@color/white"
        app:sStrokeColor="@color/DCDCDC"
        app:sStrokeWidth="1dp"
        tools:visibility="visible" />
</LinearLayout>