<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/margin_15"
    android:layout_marginRight="@dimen/margin_15"
    android:background="@drawable/shape_f1_bg_14"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_5">

    <TextView
        android:id="@+id/tv_org_name"
        style="@style/service_tv13_color_333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        tools:text="网点: 虹梅路网点" />

    <TextView
        android:id="@+id/tv_address"
        style="@style/service_tv13_color_666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="地址：浙江省杭州市西湖区弯糖路118号"
        android:visibility="gone" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/dp_10"
        tools:background="@color/color_F15" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/tv_expendle"
        style="@style/service_tv12_color_666"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@drawable/icon_eye_down_arrow_gray"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:text="展开" />

</LinearLayout>