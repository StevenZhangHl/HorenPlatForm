<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.RegisterActivity"
    tools:ignore="ResourceName">

    <com.horen.base.widget.HRToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bg_color="@color/white"
        app:is_white="true"
        app:title_elevation="0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="23dp"
        android:text="预约咨询师"
        android:textColor="@color/color_1212"
        android:textSize="25sp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/color_f5"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_15"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview_33color_15size"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="名字" />

                <com.horen.base.widget.PWEditText
                    android:id="@+id/et_contanct_name"
                    style="@style/textview_33color_13size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:minWidth="100dp"
                    android:textColorHint="@color/DCDCDC" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@color/divider"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview_33color_15size"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="联系电话" />


                <com.horen.base.widget.PWEditText
                    android:id="@+id/et_phone"
                    style="@style/textview_33color_13size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:background="@null"
                    android:hint="请输入您的手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:minWidth="100dp"
                    android:textColorHint="@color/DCDCDC" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/service_marginLeftRight_15"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:text="请问您什么时候方便接听电话？"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/textSize_15" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_button_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/selector_radio_select"
                        android:drawablePadding="10dp"
                        android:padding="@dimen/margin_15"
                        android:text="工作日-上午"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_13" />

                    <RadioButton
                        android:id="@+id/radio_button_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:background="@android:color/transparent"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/selector_radio_select"
                        android:drawablePadding="10dp"
                        android:padding="@dimen/margin_15"
                        android:text="工作日-下午"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_13" />
                </RadioGroup>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@color/divider" />

            <com.horen.base.widget.RippleButton
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="29dp"
                android:enabled="false"
                android:textSize="16sp"
                app:gray_text="预约"
                app:green_text="预约"
                app:loading_text="提交中" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>