<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_loginView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.horen.base.widget.HRTitle
        app:isDiver="false"
        app:mRightTitle="预约"
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_launcher" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="60dp"
            android:layout_marginRight="@dimen/margin_15">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="账号"
                android:textColor="@color/color_333"
                android:textSize="@dimen/textSize_15" />

            <com.horen.base.widget.PWEditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="54dp"
                android:background="@color/white"
                android:hint="手机号/登陆账号"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textColor="@color/color_333"
                android:textColorHint="@color/DCDCDC"
                android:textSize="@dimen/textSize_13"
                app:x_clearDrawable="@drawable/ic_clear" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="#EBEBEB" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="40dp"
            android:layout_marginRight="@dimen/margin_15">

            <TextView
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="密码"
                android:textColor="@color/color_333"
                android:textSize="@dimen/textSize_15" />

            <com.horen.base.widget.PWEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="54dp"
                android:background="@color/white"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:paddingRight="20dp"
                android:textColor="@color/color_333"
                android:textColorHint="@color/DCDCDC"
                android:textSize="@dimen/textSize_13"
                app:x_clearDrawable="@drawable/ic_clear"
                app:x_hidePwdDrawable="@drawable/user_ic_hide_eye"
                app:x_showPwdDrawable="@drawable/user_ic_open_eye" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="#EBEBEB" />

        </FrameLayout>

        <com.horen.base.widget.RippleButton
            android:id="@+id/rbt_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="62dp"
            android:layout_marginRight="30dp"
            app:gray_text="登录" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="29dp">

            <TextView
                android:id="@+id/tv_code_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingTop="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:text="验证码登录"
                android:textColor="@color/color_666"
                android:textSize="@dimen/textSize_15" />

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingTop="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:text="忘记密码"
                android:textColor="@color/color_666"
                android:textSize="@dimen/textSize_15" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
