<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_register_auth_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_15"
    android:background="@color/color_f5"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="国家和地区"
                android:textColor="@color/color_333"
                android:textSize="@dimen/textSize_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:text="中国大陆"
                android:textColor="@color/color_333"
                android:textSize="@dimen/textSize_13" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_icon_arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#EBEBEB" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="+86"
            android:textColor="@color/color_333" />

        <com.horen.base.widget.PWEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:hint="输入您的手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="@color/DCDCDC"
            android:textSize="@dimen/textSize_13"
            app:x_clearDrawable="@drawable/ic_clear"
            app:x_hidePwdDrawable="@null"
            app:x_showPwdDrawable="@null" />
    </FrameLayout>

    <com.horen.base.widget.RippleButton
        android:id="@+id/bt_register_next"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="30dp"
        android:enabled="false"
        app:gray_text="下一步"
        app:green_text="下一步"
        app:loading_text="加载中" />
</LinearLayout>
